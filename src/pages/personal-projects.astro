---
import Header from '../components/Header.astro';
import Project from '../components/Project.astro';
import Sidebar from '../components/Sidebar.astro';
const projects = [
  {
    title: "School Year Countdown",
    desc: [
      "My daughters wanted a countdown to the end of the school year, so I built this simple web app to show them how many days were left in each term",
      "Built with React and Vite, deployed on Cloudflare Pages"
    ],
    links: [
      { label: "School year Countdown", url: "https://school.dnolan.com"}
    ],
    tech: [ "React", "Vite", "Cloudflare" ],
    images: []
  }
];
---

<!DOCTYPE html>
<html
>
  <Header title="Personal Projects | Daniel Nolan" />
  <body>
    <div class="content">
        <Sidebar selectedItem="personal-projects" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block"
              ><img src="/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
              <div>Back</div></a
            >
          </div>
          <div class="content-container">
            <h1>Personal Projects</h1>
            <section class="items-container">
                <div class="resouce-items">
                    {projects.map(project => (
                      <Project 
                        title={project.title} 
                        desc={project.desc}
                        tech={project.tech}
                        images={project.images}
                        links={project.links}
                      />
                    ))}
                  </div>
            </section>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
